{% extends 'base.html.twig' %}

{% block title %}Message
{% endblock %}

{% block body %}
	<div class="memphis-background">
		<div class="container pt-5">
			<h2 class="title-shadow font-weight-bold text-uppercase mb-5">Message</h2>

				<table class="table mt-5 mb-5">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ message.id }}</td>
						</tr>
						<tr>
							<th>Mail</th>
							<td>{{ message.mail }}</td>
						</tr>
						<tr>
							<th>Content</th>
							<td>{{ message.content }}</td>
						</tr>
						<tr>
							<th>Object</th>
							<td>{{ message.object }}</td>
						</tr>
						<tr>
							<th>SendAt</th>
							<td>{{ message.sendAt ? message.sendAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>IsRead</th>
							<td>{{ message.isRead ? 'Yes' : 'No' }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('artist_profil') }}">back to list</a>
				{{ include('message/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
