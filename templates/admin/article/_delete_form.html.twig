<form method="post" action="{{ path('admin_article_delete', {'id': article.id}) }}"
      onsubmit="return confirm('Etes vous sûr.e de vouloir supprimer cet évenement');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn"><i class="far fa-trash-alt"></i> Supprimer</button>
</form>
