{% extends 'admin/dashboard.html.twig' %}

{% block title %}
    Admin évenements
{% endblock %}

{% block body %}
    <div class="container pt-5 pb-5">
        <h2 class="ml-3 mt-5 card-title title-shadow font-medium text-uppercase">
			<span class="title-content">
                {% block head_title %}Gestion des évenements{% endblock %}
			</span>
        </h2>
        <div class="row pt-5 pb-5">
            <table>
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Image</th>
                    <th>Posté le</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for happening in happenings %}
                    <tr>
                        <td>{{ happening.title }}</td>
                        <td>{{ happening.media }}</td>
                        <td>{{ happening.createdAt|date('d/m/Y') }}</td>
                        <td>
                            <a href="{{ path('admin_happening_edit', {id: happening.id}) }}"
                               class="card-link font-weight-bold text-dark"><i class="far fa-envelope"></i>Modifier</a>
                            {{ include('admin/happening/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
